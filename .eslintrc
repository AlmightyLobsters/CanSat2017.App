{ // add html linting
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "plugins": [ "react", "import" ],
  "rules": {
    "indent": [ 2, 4, { "SwitchCase": 1 } ],
    "quotes": [ 2, "single" ],
    "semi": [ 2, "always" ],
    "no-console": [ 0 ],
    "no-loop-func": [ 0 ],
    "new-cap": [ 0 ],
    "no-trailing-spaces": [ 0 ],
    "no-param-reassign": [ 0 ],
    "func-names": [ 0 ],
    "comma-dangle": [ 0 ],
    "no-unused-vars": [2, { "args": "none" }],
    "no-unused-expressions" : [ 0 ], // until fixed https://github.com/babel/babel-eslint/issues/158
    "block-scoped-var": [ 0 ], // until fixed https://github.com/eslint/eslint/issues/2253
    "eol-last": [ 2 ],
    "import/no-extraneous-dependencies": [ 2, {"devDependencies": true} ],
    "react/prop-types": [ 0 ],
    "react/prefer-stateless-function": [ 1 ],
    "react/jsx-uses-react": [ 1 ],
    "react/jsx-uses-vars": 1,
    "react/jsx-filename-extension": [ 2, {"extensions": [".jsx", ".js"]} ],
    "react/jsx-indent": [ 2, 4 ],
    "react/react-in-jsx-scope": [ 2 ]

  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "mocha": true
  }
}
